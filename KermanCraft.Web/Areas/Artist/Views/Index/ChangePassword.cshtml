@model KermanCraft.Application.ViewModels.Account.ChangePasswordViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="portlet box border shadow">
    <div class="portlet-heading">
        <div class="portlet-title">
            <h3 class="title">
                <i class="icon-user"></i>
                فرم تغییر رمز عبور
            </h3>
        </div><!-- /.portlet-title -->
    </div><!-- /.portlet-heading -->
    <div class="portlet-body m-auto ">
        <form role="form" method="POST" asp-action="ChangePassword" asp-controller="Index" asp-area="Artist" >
            <div class="form-body">
                <input type="hidden" asp-for="UserId"/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CurrentPassWord">رمز عبور فعلی </label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-box"></i>
                        </span>
                        <input type="password" class="form-control"  asp-for="CurrentPassWord">
                    </div><!-- /.input-group -->
                    <span asp-validation-for="CurrentPassWord" class="text-danger"></span>
                </div><!-- /.form-group -->
                <div class="form-group">
                    <label asp-for="NewPass">رمز عبور جدید </label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-box"></i>
                        </span>
                        <input type="password" class="form-control"  asp-for="NewPass">
                    </div><!-- /.input-group -->
                    <span asp-validation-for="NewPass" class="text-danger"></span>
                </div><!-- /.form-group -->
                <div class="form-group">
                    <label asp-for="NewPassConfirm">تایید رمز عبور جدید </label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-box"></i>
                        </span>
                        <input type="password" class="form-control"  asp-for="NewPassConfirm">
                    </div><!-- /.input-group -->
                    <span asp-validation-for="NewPassConfirm" class="text-danger"></span>
                </div><!-- /.form-group -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-info btn-curve">
                        <i class="icon-check"></i>
                        ذخیره
                        <div class="paper-ripple">
                            <div class="paper-ripple__background"></div>
                            <div class="paper-ripple__waves"></div>
                        </div>
                    </button>
                    <a asp-area="Artist" asp-controller="Index" asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-warning btn-curve">
                        بازگشت
                        <i class="icon-close"></i>
                        <div class="paper-ripple">
                            <div class="paper-ripple__background"></div>
                            <div class="paper-ripple__waves"></div>
                        </div>
                    </a>
                </div><!-- /.form-actions -->
            </div>
        </form>
    </div><!-- /.portlet-body -->
</div>



@section scripts
{

    <!-- BEGIN PAGE JAVASCRIPT -->
    <partial name="_ValidationScriptsPartial" />
    <!-- END PAGE JAVASCRIPT -->

}
