@model System.Collections.Generic.IEnumerable<KermanCraft.Application.ViewModels.Event.EventViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/front/Content/css/cardrozane .css" />
<div class="container mt-5">
    <br /> <br />
    <h1 class="text-white  heading-1"><span>رویدادها و جشنواره ها</span></h1>

    <br />
    <br />
    <div class="row">
      @if (!Model.Any())
      {
          <div>موردی وجود ندارد!</div>
      }
      else
      {
          foreach (var item in Model)
          {
              <div class="col-lg-3 box col-md-6 col-xs-12 pl-1 pr-1">
                  <div class="card">
                      <img class="imgneg" src="~/images/Event/@item.ImageUrl" alt="EventUrl"/>
                      <br />
                      <h5>@item.Name</h5>
                      <hr />

                      <p style="color:black">
                         @item.Type
                      </p>
                      <div class="row">
                          <div class="col"></div>
                          <div class="col">
                              <a asp-controller="Home" asp-action="GetEvent" asp-route-eventId="@item.EventId" class="btn btnkhabar">جزییات </a>
                          </div>
                          <div class="col"></div>
                      </div>
                  </div>
              </div>
          }
      }

    </div>
    <br />
    <br />
    <br />
    <br />
</div>

