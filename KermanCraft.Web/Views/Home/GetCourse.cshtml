<h3 class="ph1">نام دوره</h3>
<br />
<div class="row">


    <div class="col-sm-6">

        <div class="container ">
            <br />
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">

                        <img src="~/images/Course/@Model.ImageUrl" alt="CourseImage" style="width:100%;">
                    </div>


                </div>


                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>

    </div>
    <div class="col-sm-6">

        <div class=" ds container">
            <p class="pslide">
                نام کلاس:<span class="l8">@Model.Subject</span>
            </p>
            <p class="pslide">
                نام برگزار کننده:<span class="l8">@user.Entity.Name @user.Entity.Family</span>
            </p>
            @*<p class="pslide">
                    ظرفیت کلاس:<span class="l8">20</span>
                </p>*@
            <p class="pslide">
                تاریخ شروع:<span class="l8">@PersianDate.ToPersianDateString(Model.DateTime)</span>
            </p>
            <p class="pslide">
                شماره تماس<span class="l8">@user.Entity.PhoneNumber</span>
            </p>
            <p class="pslide">
                توضیحات:<span class="l8">@Model.Text</span>
            </p>
        </div>


    </div>
</div>
<div class="row">
    <br />
    <div class="col">

    </div>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="col">
            <button asp-controller="RegisterEventAndCourse" asp-action="RegisterCourse" asp-route-courseId="@Model.CourseId" class="btn-success">ثبت نام</button>
        </div>
    }
    else
    {
        <div class="col">
            لطفا برای ثبت نام وارد شوید!
        </div>
    }

    <div class=" col">

    </div>
    <br />
</div>
